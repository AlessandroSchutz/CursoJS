<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-4">
            <h1 class="display-1 text-center">Contato</h1>
            <p class="text-center lead">Crie ou edite seu contato abaixo.</p>

            <%- include('includes/messages') %>

            <% if(contato._id) { %>
            <form action="/contato/edit/<%= contato._id %>" method="POST" class="form-edit my-3">
            <% } else { %>        
            <form action="/contato/register" method="POST" class="form-contato my-3">
            <% } %>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group my-3">
                  <label>Nome:</label>
                  <input value="<%= contato.nome %>" type="text" class="form-control" name="nome">
                  <p class="erro-nome"></p>
                </div>
                <div class="form-group my-3">
                    <label>Sobrenome:</label>
                    <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome">
                    <p class="erro-sobrenome"></p>
                </div>
                <div class="form-group my-3">
                    <label>E-mail:</label>
                    <input value="<%= contato.email %>" type="email" class="form-control" name="email">
                    <p class="erro-email"></p>
                </div> 
                <div class="form-group my-3">
                    <label>Telefone:</label>
                    <input value="<%= contato.telefone %>" type="tel" class="form-control" name="telefone">
                    <p class="erro-telefone"></p>
                </div> 
                <button type="submit" class="btn btn-primary my-1">Salvar</button>
              </form>
            

        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>